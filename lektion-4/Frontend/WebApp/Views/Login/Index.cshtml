@model LoginViewModel
@{
    ViewData["Title"] = "Log in to your account";
    Layout = "_AuthenticationLayout";
}

<div id="login" class="card">
    <div class="card-header">
        <h2>Welcome back!</h2>
        <p class="additional-info">You need to log in to your account. You can log in with your local account or use one of our third-party logins.</p>
        <p>
            @ViewBag?.ErrorMessage
        </p>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Index" asp-controller="Login" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />
            <div class="form-group">

                <input asp-for="Email" class="form-input" />
            </div>
            <div class="form-group">
                <div class="additional-info right"><a asp-action="Index" asp-controller="SignUp">Forgot your password? </a></div>
                <input asp-for="Password" class="form-input" />
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            <div class="form-group">
                <div class="checkbox">
                    <label class="form-checkbox">
                        <input asp-for="RememberMe" />
                        <span class="checkmark"></span>
                    </label>
                    <label class="form-label">Keep me logged in</label>
                </div>
            </div>
            <div class="card-footer">
                <div class="additional-info center">Don't have an account yet? <a asp-action="Index" asp-controller="SignUp">Sign Up</a></div>
            </div>
        </form>
    </div>
</div>